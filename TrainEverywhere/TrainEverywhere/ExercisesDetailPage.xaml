<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainEverywhere.ExercisesDetailPage">
	<ContentPage.Content>
		<StackLayout>
			<Label Text="Exercise" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
			<Image Source="" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
			<Label Text="Name"/>
			<Editor Text="Description" VerticalOptions="FillAndExpand" Keyboard="Chat"/>

			<StackLayout Orientation="Horizontal">
				<Label Text="Sets:"/>
				<Entry Keyboard="Numeric" WidthRequest="90"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Label Text="Reps:"/>
				<Entry Keyboard="Numeric" WidthRequest="90"/>
			</StackLayout>

			
			
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
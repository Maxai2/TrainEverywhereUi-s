<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainEverywhere.App">
	<Application.Resources>
		<ResourceDictionary>
			<OnPlatform x:TypeArguments="x:String" x:Key="IndieFont">
				<On Platform="Android" Value="IndieFlower.ttf#IndieFlower"/>
			</OnPlatform>
			<OnPlatform x:TypeArguments="x:String" x:Key="SunshineFont">
				<On Platform="Android" Value="Sunshine.ttf#Sunshine"/>
			</OnPlatform>
			<OnPlatform x:TypeArguments="x:String" x:Key="AmericaFont">
				<On Platform="Android" Value="America.ttf#America"/>
			</OnPlatform>

			<Color x:Key="MainCol">#112F41</Color>
			<Color x:Key="SecondCol">#F2B134</Color>
			<Color x:Key="UnusualCol">#ED553B</Color>
			
		</ResourceDictionary>
	</Application.Resources>
</Application>